<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style/styles.css">
    <title>To dO List</title>
</head>
<body>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
      
    </div>

    
    <div class="box">
        
            <%  newList.forEach(function(nowlist){ %>
                <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox"  name="checkbox" value="<%=nowlist._id%>" onChange="this.form.submit()" >
                    <p><%=nowlist.name%></p>
                </div>
                <input type="hidden" name="hiddenName" value="<%=listTitle%>">
            </form>
                  <% }) %>
                

          <form action="/" method="post" class="item">
            <input type="text" name="newItem" placeholder="Add New" autocomplete="off">
            <button class="add" type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>
   
</body>
</html>